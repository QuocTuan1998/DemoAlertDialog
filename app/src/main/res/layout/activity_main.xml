<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.quoctuan.demoalertdialog.MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtDangNhap"
        android:text="Đăng nhập hệ thống"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:background="#00FFFF"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtDangNhap"
        android:id="@+id/txtUser"
        android:text="User : "
        android:textSize="25dp"
        android:textColor="#000000"
        />
    <EditText
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtDangNhap"
        android:layout_alignParentRight="true"
        android:id="@+id/editUser"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editUser"
        android:id="@+id/txtpass"
        android:text="Password : "
        android:textSize="25dp"
        android:textColor="#000000"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editUser"
        android:layout_toRightOf="@id/txtpass"
        android:id="@+id/editPass"
        android:inputType="textPassword"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editPass"
        android:layout_toRightOf="@id/txtpass"
        android:id="@+id/chkSave"
        android:text="Lưu thông tin"
        android:textSize="18dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chkSave"
        android:layout_toRightOf="@id/txtpass"
        android:id="@+id/btnLogin"
        android:text="Đăng Nhập"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_alignParentRight="true"
        android:id="@+id/btnExit"
        android:text="Thoát"
        />
</RelativeLayout>
